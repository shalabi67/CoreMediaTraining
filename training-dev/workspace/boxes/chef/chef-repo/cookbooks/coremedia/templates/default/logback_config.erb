<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

  <% unless @pattern.nil? -%>
  <property name="log.pattern" value="<%=@pattern%>"/>
  <% end -%>
  <!--generated by Chef, manually edited changes will be lost after next run-->

  <include resource="logging-common.xml"/>

  <% @logger.keys.sort.each do |key| -%>
    <logger name="<%= key %>" additivity="false" level="<%= @logger[key]["level"] %>">
      <appender-ref ref="file"/>
    </logger>
  <% end -%>

  <root level="warn">
    <appender-ref ref="file"/>
  </root>

</configuration>